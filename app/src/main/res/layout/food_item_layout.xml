<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
 >

    <ImageView
        android:id="@+id/food_item_photo"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/food"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/food_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banana"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/food_item_photo"/>
    <TextView
        android:id="@+id/food_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruits"
        android:layout_below="@+id/food_item_name"
        android:layout_toEndOf="@+id/food_item_photo"/>
    <TextView
        android:id="@+id/food_item_calory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 cal/g"
        android:layout_below="@+id/food_item_category"
        android:layout_toEndOf="@+id/food_item_photo"/>

    <Button
        android:id="@+id/food_item_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Edit"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/food_item_edit_btn"
        android:layout_margin="8dp"/>
</RelativeLayout>